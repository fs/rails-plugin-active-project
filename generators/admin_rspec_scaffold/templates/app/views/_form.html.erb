<%%= f.error_messages %>

<%% tabs(:<%= plural_name %>) do |tab| %>        
    <%% tab.primary do %>
        
      <% for attribute in attributes %>
      <div>
          <label for="<%= attribute.name %>"><%= attribute.column.human_name %> <span class="required">*</span>:</label><br />
          <% if attribute.field_type == :text_filed %>        
          <%%= f.<%= attribute.field_type %> :<%= attribute.name %>, :size => <%= attribute.column.inspect || 255 %> %>
          <% else %>
          <%%= f.<%= attribute.field_type %> :<%= attribute.name %> %>
          <% end %>
          <div class="field-tip"><%= attribute.column.human_name %> tip</div>
      </div>
      <% end %>

      <div class="required-area">
          <span class="required">*</span> - required fields
      </div>
        
    <%% end %>
<%% end %>